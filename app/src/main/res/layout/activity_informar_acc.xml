<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformarAcc">

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="639dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nombre_acc_ia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre accidentado"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/accidente_ia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Accidente"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/calle_ia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Calle"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/carrera_ia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Carrera"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bn_informar_ia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>